<div class="card shadow border-primary">
  <div class="card-header bg-white border-primary">
    <h2 class="mb-0 text-dark">Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="card-body bg-white">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label text-dark" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-primary" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">
          Waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, "Password", class: "form-label text-dark" %> 
        <small class="text-muted">(leave blank if you don't want to change it)</small>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-primary" %>
        <% if @minimum_password_length %>
          <div class="form-text">Minimum <%= @minimum_password_length %> characters</div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm password", class: "form-label text-dark" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-primary" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, "Current password", class: "form-label text-dark" %>
        <small class="text-muted">(we need your current password to confirm your changes)</small>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control border-primary" %>
      </div>

      <div class="d-flex align-items-center">
        <%= f.submit "Update", class: "btn btn-primary text-white me-2" %>
        <%= link_to "Back", :back, class: "btn btn-outline-primary ms-2" %>
      </div>
    <% end %>

    <hr class="my-4 border-primary">

    <div class="card border-danger">
      <div class="card-header bg-white border-danger">
        <h3 class="mb-0 h5 text-danger">Cancel my account</h3>
      </div>
      <div class="card-body">
        <p class="text-dark">Unhappy with the service?</p>
        <%= button_to "Delete my account", registration_path(resource_name), 
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
            method: :delete, 
            class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>